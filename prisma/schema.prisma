datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Request {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  course   String
  question String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  password  String
  role      String   @default("tutor")
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}